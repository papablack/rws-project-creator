{
  "compilerOptions": {
    "target": "ES2022", // Target modern JavaScript
    "module": "commonjs", 
    "moduleResolution": "node", 
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compile-time interop support for default imports
    "jsx": "react-jsx", // Support JSX syntax
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export. This does not affect code emit, just typechecking.
    // "resolveJsonModule": true, // Include modules imported with '.json' extension
    "outDir": "dist", // Output directory for the compiled files
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {}, // Specify paths mappings for modules
    "declaration": true
  },
  "include": ["src/", "exec/"], // Include all files in the src directory
  "exclude": [
    "../console-vis/node_modules/*", 
    "**/*.spec.ts"
    ] // Exclude the node_modules directory and test files
}